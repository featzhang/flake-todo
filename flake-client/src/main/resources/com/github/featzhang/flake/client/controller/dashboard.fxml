<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import com.calendarfx.view.CalendarView?>
<BorderPane fx:id="rootPane" prefHeight="788.0" prefWidth="974.0" BorderPane.alignment="CENTER"
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.featzhang.flake.client.controller.DashboardController">
    <center>
        <TabPane>
            <Tab fx:id="todayTab" closable="false" text="%label_today">
                <GridPane hgap="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                          minHeight="-Infinity" minWidth="-Infinity" prefHeight="703.0" prefWidth="985.0" vgap="5.0">

                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="341.0" minWidth="100.0"
                                           prefWidth="229.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="1.7976931348623157E308"
                                           minWidth="321.0" prefWidth="426.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints maxHeight="301.0" minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="410.0" minHeight="0.0" prefHeight="25.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="231.0" minHeight="9.0" prefHeight="101.0" vgrow="ALWAYS"/>
                        <RowConstraints maxHeight="454.0" minHeight="0.0" prefHeight="249.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="389.0" minHeight="10.0" prefHeight="263.0" valignment="CENTER"
                                        vgrow="ALWAYS"/>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>

                    <Accordion fx:id="according" depthTest="ENABLE" maxHeight="1.7976931348623157E308"
                               maxWidth="1.7976931348623157E308" style="-fx-border-color: darkgray;"
                               GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2"
                               GridPane.rowSpan="3" GridPane.vgrow="ALWAYS">
                        <panes>
                            <TitledPane id="0" fx:id="undoneTitledPane" animated="false" text="%label_undone">
                                <ListView id="0" fx:id="undoneList" onMouseClicked="#onTaskClicked" prefHeight="200.0"
                                          prefWidth="200.0"/>
                            </TitledPane>
                            <TitledPane id="1" fx:id="yesterdayTitledPane" animated="false"
                                        text="%label_yesterday_review">
                                <ListView id="1" fx:id="yesterdayList" onMouseClicked="#onTaskClicked"
                                          prefHeight="200.0" prefWidth="200.0"/>
                            </TitledPane>
                            <TitledPane id="2" fx:id="todayPlanTitledPane" animated="false" text="%label_today_plan">
                                <ListView id="2" fx:id="todayPlanList" onMouseClicked="#onTaskClicked"
                                          prefHeight="200.0" prefWidth="200.0"/>
                            </TitledPane>
                            <TitledPane id="3" fx:id="tomatoPotatoTitledPane" animated="false"
                                        text="%label_tomato_potato">
                                <ListView id="3" fx:id="todayTomatoList" onMouseClicked="#onTaskClicked"
                                          prefHeight="200.0" prefWidth="200.0"/>
                            </TitledPane>
                            <TitledPane id="4" fx:id="todaySummaryTitledPane" animated="false"
                                        text="%label_today_summary">
                                <ListView id="4" fx:id="summaryList" onMouseClicked="#onTaskClicked" prefHeight="200.0"
                                          prefWidth="200.0"/>
                            </TitledPane>
                        </panes>
                    </Accordion>
                    <TitledPane collapsible="false" text="%label_timer" GridPane.columnIndex="2" GridPane.rowIndex="5">
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="30.0">
                            <Label fx:id="timerStatsLabel" text="timer status">
                                <font>
                                    <Font size="18.0"/>
                                </font>
                            </Label>
                            <Label fx:id="timerCounterLabel" text="Label" textFill="#2fa105">
                                <font>
                                    <Font size="48.0"/>
                                </font>
                            </Label>
                            <Label fx:id="workContentLabel" text="Label" underline="true"/>
                            <HBox alignment="CENTER" prefWidth="200.0" style="-fx-spacing: 20;">
                                <Button fx:id="stopButton" mnemonicParsing="false" onAction="#onStopTimer"
                                        text="%label_stop"/>
                            </HBox>
                        </VBox>
                    </TitledPane>
                    <ToolBar maxWidth="1.7976931348623157E308" prefHeight="39.0" prefWidth="614.0"
                             GridPane.columnSpan="3" GridPane.rowIndex="1">
                        <DatePicker fx:id="currentDatePicker" editable="false" prefHeight="26.0" prefWidth="113.0"
                                    showWeekNumbers="true"/>
                        <ComboBox fx:id="typeComboBox" HBox.hgrow="NEVER"/>
                        <TextField fx:id="newContentTextField" onKeyPressed="#onNewContentKeyPressed"
                                   promptText="%label_new_task" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#onAddButtonAction"
                                style="-fx-graphic: url('/images/add.png')" text="添加"/>
                        <Button mnemonicParsing="false" onAction="#onAddMoreButtonAction"
                                style="-fx-graphic: url('/images/more.png')" text="更多"/>
                    </ToolBar>
                    <BorderPane GridPane.rowIndex="2" GridPane.rowSpan="4">
                        <center>
                            <ListView fx:id="incomeEventList" prefHeight="200.0" prefWidth="200.0"/>
                        </center>
                        <top>
                            <BorderPane BorderPane.alignment="CENTER">
                                <center>
                                    <TextField BorderPane.alignment="CENTER"/>
                                </center>
                                <right>
                                    <Button mnemonicParsing="false" text="%label_search" BorderPane.alignment="CENTER"/>
                                </right>
                            </BorderPane>
                        </top>
                    </BorderPane>
                    <CalendarView fx:id="calendarView"
                                  prefHeight="200.0"
                                  prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.rowSpan="4"
                                  showNoonMarker="false"
                                  showSearchField="false"
                                  showAddCalendarButton="false"
                                  showPrintButton="false"
                                  showToday="false"
                                  showPageSwitcher="false"
                                  showDeveloperConsole="false"
                                  showDetailsUponEntryCreation="false"
                                  showPageToolBarControls="false"
                                  showSearchResultsTray="false"
                                  showSourceTray="false"
                                  showSourceTrayButton="false"
                                  showToolBar="false"
                    />
                </GridPane>
            </Tab>

            <Tab fx:id="tasksTab" closable="false" text="%label_tasks">
                <BorderPane>
                    <top>
                        <ToolBar>
                            <TextField fx:id="searchTextField" onKeyPressed="#onSearchTextKeyPressed"
                                       promptText="%label_new_task" style="-fx-font-size: 16;" HBox.hgrow="ALWAYS"/>
                            <Button onAction="#onSearchButtonAction" style="-fx-graphic: url('/images/search.png')"
                                    text="%label_search"/>
                        </ToolBar>
                    </top>
                    <center>
                        <ListView id="0" fx:id="allTaskListView" onMouseClicked="#onTaskClicked" prefHeight="200.0"
                                  prefWidth="200.0"/>
                    </center>
                </BorderPane>
            </Tab>
            <Tab closable="false" text="%label_dashboard">

            </Tab>
        </TabPane>
    </center>
    <padding>
        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
    </padding>
    <bottom>
        <ToolBar BorderPane.alignment="CENTER">
            <HBox>
                <Button mnemonicParsing="false" onAction="#onSettings" style="-fx-graphic: url('/images/settings.png')"
                        text="%label.setting"/>
            </HBox>
            <BorderPane HBox.hgrow="ALWAYS">
                <center>
                    <Label text="消息栏"/>
                </center>
            </BorderPane>
            <HBox fx:id="statusHBox"
                  style="-fx-background-color: red;-fx-font-size: 16;-fx-border-color: white;-fx-border-width: 1;">
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/todos.png')"/>
                <Label fx:id="tomatoCntLbl" text="todos"/>
                <Separator orientation="VERTICAL"/>
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/tasks.png');"/>
                <Label fx:id="totalTaskCntLbl" text="tasks"/>
                <Separator orientation="VERTICAL"/>
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/today_task.png')"/>
                <Label fx:id="todayTaskCntLbl" text="todayTaskCnt"/>
                <Separator orientation="VERTICAL"/>
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/distribute.png');"/>
                <Label fx:id="taskPriorityDistributeLbl" text="taskPriorityDistributeLbl"/>
                <Separator orientation="VERTICAL"/>
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/urgent.png')"/>
                <Label fx:id="urgentTaskCntLbl"/>
                <Separator orientation="VERTICAL"/>
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/completeness.png')"/>
                <Label fx:id="completenessLbl" text="completenessLbl"/>
                <Separator orientation="VERTICAL"/>
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/working.jpg')"/>
                <Label fx:id="maxWorkTimeLbl" text="maxWorkTimeLbl"/>
            </HBox>
        </ToolBar>
    </bottom>
</BorderPane>
