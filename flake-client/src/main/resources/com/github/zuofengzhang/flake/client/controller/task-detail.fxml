<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
          minWidth="-Infinity" onKeyPressed="#onRootPaneKeyPressed" prefHeight="623.0" prefWidth="601.0"
          xmlns="http://javafx.com/javafx/8.0.211" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.github.zuofengzhang.flake.client.controller.TaskDetailController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="515.0" minWidth="10.0" prefWidth="47.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="515.0" minWidth="10.0" prefWidth="61.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="515.0" minWidth="10.0" prefWidth="59.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="515.0" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="39.0" minHeight="0.0" prefHeight="39.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="580.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <TextField fx:id="titleTextField" prefHeight="27.0" prefWidth="439.0" GridPane.columnSpan="4">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <Accordion fx:id="accordion" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   GridPane.columnSpan="4" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
            <panes>
                <TitledPane fx:id="contentTitlePane" animated="false" text="%content">
                    <content>
                        <TextArea fx:id="contentTextArea" onMouseExited="#onContentMouseExited" prefHeight="200.0"
                                  prefWidth="200.0"/>
                    </content>
                </TitledPane>
                <TitledPane fx:id="attachmentTitlePane" animated="false" text="%attachment">
                    <content>
                        <ListView fx:id="attachmentListView" onMouseClicked="#onAttachmentMouseClicked"
                                  prefHeight="200.0" prefWidth="200.0">
                            <contextMenu>
                                <ContextMenu id="4">
                                    <items>
                                        <MenuItem mnemonicParsing="false" onAction="#onOpenAttachmentMenu"
                                                  text="%menu_open">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="O" control="UP" meta="DOWN"
                                                                    shift="UP" shortcut="UP"/>
                                            </accelerator>
                                        </MenuItem>
                                        <SeparatorMenuItem/>
                                        <MenuItem mnemonicParsing="false" onAction="#onAddAttachmentMenu"
                                                  text="%menu_add">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="N" control="UP" meta="DOWN"
                                                                    shift="UP" shortcut="UP"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem mnemonicParsing="false" onAction="#onPasteAttachmentMenu"
                                                  text="%menu_paste">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="V" control="UP" meta="DOWN"
                                                                    shift="UP" shortcut="UP"/>
                                            </accelerator>
                                        </MenuItem>
                                        <SeparatorMenuItem/>
                                        <MenuItem mnemonicParsing="false" onAction="#onDeleteAttachmentMenu"
                                                  text="%menu_delete">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="DELETE" control="UP" meta="DOWN"
                                                                    shift="UP" shortcut="UP"/>
                                            </accelerator>
                                        </MenuItem>
                                    </items>
                                </ContextMenu>
                            </contextMenu>
                        </ListView>
                    </content>
                </TitledPane>
                <TitledPane fx:id="historyTitlePane" prefHeight="200.0" prefWidth="200.0" text="%history">
                    <content>
                        <ListView fx:id="historyListView" prefHeight="200.0" prefWidth="200.0"/>
                    </content>
                </TitledPane>
            </panes>
        </Accordion>

    </children>
    <padding>
        <Insets bottom="2.0" left="10.0" right="10.0" top="2.0"/>
    </padding>
</GridPane>
