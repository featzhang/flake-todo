<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="615.0"
          prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.211"
          fx:controller="com.github.zuofengzhang.flake.client.controller.TaskDetailController"
onKeyPressed="#onRootPaneKeyPressed"
>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="515.0" minWidth="10.0" prefWidth="47.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="515.0" minWidth="10.0" prefWidth="61.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="515.0" minWidth="10.0" prefWidth="59.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="515.0" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="130.0" minHeight="0.0" prefHeight="35.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="558.0" minHeight="10.0" prefHeight="536.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="72.0" minHeight="10.0" prefHeight="41.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <TextField fx:id="titleTextField" prefHeight="27.0" prefWidth="439.0" GridPane.columnSpan="4"/>
        <Accordion GridPane.columnSpan="4" GridPane.rowIndex="1" fx:id="accordion">
            <panes>
                <TitledPane fx:id="contentTitlePane" animated="false" text="%label_content">
                    <content>
                        <TextArea prefHeight="200.0" prefWidth="200.0" fx:id="contentTextArea" onMouseExited="#onContentMouseExited"/>
                    </content>
                </TitledPane>
                <TitledPane fx:id="attachmentTitlePane" animated="false" text="%label_attachment">
                    <content>
                        <ListView prefHeight="200.0" prefWidth="200.0" fx:id="attachmentListView"
                                  onMouseClicked="#onAttachmentMouseClicked">
                            <contextMenu>
                                <ContextMenu id="4">
                                    <items>
                                        <MenuItem mnemonicParsing="false" onAction="#onOpenAttachmentMenu"
                                                  text="%menu_open"/>
                                        <SeparatorMenuItem/>
                                        <MenuItem mnemonicParsing="false" onAction="#onAddAttachmentMenu"
                                                  text="%menu_add"/>
                                        <MenuItem mnemonicParsing="false" onAction="#onDeleteAttachmentMenu"
                                                  text="%menu_delete"/>
                                    </items>
                                </ContextMenu>
                            </contextMenu>
                        </ListView>
                    </content>
                </TitledPane>
                <TitledPane fx:id="historyTitlePane" prefHeight="200.0" prefWidth="200.0" text="%label_history">
                    <content>
                        <ListView prefHeight="200.0" prefWidth="200.0" fx:id="historyListView"/>
                    </content>
                </TitledPane>
            </panes>
        </Accordion>

    </children>
    <padding>
        <Insets left="10.0" right="10.0"/>
    </padding>
</GridPane>
