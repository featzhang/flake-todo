<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="788.0" prefWidth="932.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.211"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.zuofengzhang.flake.client.controller.DashboardController">
    <center>
        <GridPane hgap="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                  minWidth="-Infinity" vgap="5.0">

            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="260.0" minWidth="10.0"
                                   prefWidth="260.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"
                                   minWidth="10.0" prefWidth="662.0"/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints maxHeight="301.0" minHeight="0.0" prefHeight="273.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="231.0" minHeight="9.0" prefHeight="54.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="454.0" minHeight="0.0" prefHeight="252.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="389.0" minHeight="10.0" prefHeight="65.0" valignment="CENTER"
                                vgrow="ALWAYS"/>
                <RowConstraints maxHeight="389.0" minHeight="10.0" prefHeight="42.0" valignment="CENTER"
                                vgrow="ALWAYS"/>
                <RowConstraints maxHeight="296.0" minHeight="10.0" prefHeight="23.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Accordion fx:id="according" depthTest="ENABLE" maxHeight="1.7976931348623157E308"
                           maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.columnSpan="2"
                           GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.rowSpan="5" GridPane.vgrow="ALWAYS">
                    <panes>
                        <TitledPane id="0" fx:id="undoneTitledPane" animated="false" text="%label_undone">
                            <content>
                                <ListView id="0" fx:id="undoneList" onMouseClicked="#onTaskClicked" prefHeight="200.0"
                                          prefWidth="200.0">
                                    <contextMenu>
                                        <ContextMenu id="0">
                                            <items>
                                                <MenuItem mnemonicParsing="false" onAction="#onStartTimer"
                                                          text="%label_focus"/>
                                                <SeparatorMenuItem/>
                                                <Menu mnemonicParsing="false" text="%menu_importance_urgency_axis">
                                                    <items>
                                                        <RadioMenuItem id="1" mnemonicParsing="false"
                                                                       onAction="#onSetIuaMenu"
                                                                       text="%label_importance_urgency">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="iua"/>
                                                            </toggleGroup>
                                                        </RadioMenuItem>
                                                        <RadioMenuItem id="2" mnemonicParsing="false"
                                                                       onAction="#onSetIuaMenu"
                                                                       text="%label_importance_but_not_urgency"
                                                                       toggleGroup="$iua"/>
                                                        <RadioMenuItem id="3" mnemonicParsing="false"
                                                                       onAction="#onSetIuaMenu"
                                                                       text="%label_not_importance_but_urgency"
                                                                       toggleGroup="$iua"/>
                                                        <RadioMenuItem id="4" mnemonicParsing="false"
                                                                       onAction="#onSetIuaMenu" selected="true"
                                                                       text="%label_not_importance_not_urgency"
                                                                       toggleGroup="$iua"/>
                                                    </items>
                                                </Menu>


                                                <SeparatorMenuItem/>
                                                <Menu text="%menu_order">
                                                    <MenuItem mnemonicParsing="false" onAction="#onOrderMoveTopMenu"
                                                              text="%menu_move_top"/>
                                                    <MenuItem mnemonicParsing="false" onAction="#onOrderMoveUpMenu"
                                                              text="%menu_move_up"/>
                                                    <MenuItem mnemonicParsing="false" onAction="#onOrderMoveDownMenu"
                                                              text="%menu_move_down"/>
                                                </Menu>
                                                <SeparatorMenuItem/>
                                                <Menu text="%menu_delete_undelete" id="0">
                                                    <MenuItem mnemonicParsing="false" onAction="#onDeleteMenu"
                                                              text="%menu_delete"/>
                                                    <SeparatorMenuItem/>
                                                    <MenuItem mnemonicParsing="false" onAction="#onUndeleteMenu"
                                                              text="%menu_undelete"/>
                                                </Menu>

                                            </items>
                                        </ContextMenu>
                                    </contextMenu>
                                </ListView>
                            </content>
                        </TitledPane>
                        <TitledPane id="1" fx:id="yesterdayTitledPane" animated="false" text="%label_yesterday_review">
                            <content>
                                <ListView id="1" fx:id="yesterdayList" onMouseClicked="#onTaskClicked"
                                          prefHeight="200.0" prefWidth="200.0">
                                    <contextMenu>
                                        <ContextMenu id="1">
                                            <items>
                                                <MenuItem mnemonicParsing="false" onAction="#onStartTimer"
                                                          text="%label_focus"/>
                                                <Menu mnemonicParsing="false" text="%menu_move_to">
                                                    <items>
                                                        <MenuItem id="2" mnemonicParsing="false" onAction="#onMoveMenu"
                                                                  text="%label_today_plan"/>
                                                        <MenuItem id="3" mnemonicParsing="false" onAction="#onMoveMenu"
                                                                  text="%label_tomato_potato"/>
                                                        <MenuItem id="4" mnemonicParsing="false" onAction="#onMoveMenu"
                                                                  text="%label_today_summary"/>
                                                    </items>
                                                </Menu>
                                                <SeparatorMenuItem/>

                                                <MenuItem mnemonicParsing="false" onAction="#onDeleteMenu"
                                                          text="%menu_delete"/>
                                            </items>
                                        </ContextMenu>
                                    </contextMenu>
                                </ListView>
                            </content>
                        </TitledPane>
                        <TitledPane id="2" fx:id="todayPlanTitledPane" animated="false" text="%label_today_plan">
                            <content>
                                <ListView id="2" fx:id="todayPlanList" onMouseClicked="#onTaskClicked"
                                          prefHeight="200.0" prefWidth="200.0">
                                    <contextMenu>
                                        <ContextMenu id="2">
                                            <items>
                                                <MenuItem mnemonicParsing="false" onAction="#onStartTimer"
                                                          text="%label_focus"/>

                                                <Menu mnemonicParsing="false" text="%menu_move_to">
                                                    <items>
                                                        <MenuItem id="1" mnemonicParsing="false" onAction="#onMoveMenu"
                                                                  text="%label_yesterday_review"/>
                                                        <MenuItem id="3" mnemonicParsing="false" onAction="#onMoveMenu"
                                                                  text="%label_tomato_potato"/>
                                                        <MenuItem id="4" mnemonicParsing="false" onAction="#onMoveMenu"
                                                                  text="%label_today_summary"/>
                                                    </items>
                                                </Menu>
                                                <SeparatorMenuItem/>

                                                <MenuItem mnemonicParsing="false" onAction="#onDeleteMenu"
                                                          text="%menu_delete"/>
                                            </items>
                                        </ContextMenu>
                                    </contextMenu>
                                </ListView>
                            </content>
                        </TitledPane>
                        <TitledPane id="3" fx:id="tomatoPotatoTitledPane" animated="false" text="%label_tomato_potato">
                            <content>
                                <ListView id="3" fx:id="todayTomatoList" onMouseClicked="#onTaskClicked"
                                          prefHeight="200.0" prefWidth="200.0">
                                    <contextMenu>
                                        <ContextMenu id="3">
                                            <items>
                                                <MenuItem mnemonicParsing="false" onAction="#onStartTimer"
                                                          text="%label_focus"/>
                                                <Menu mnemonicParsing="false" text="%menu_move_to">
                                                    <items>
                                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                                        <MenuItem id="1" mnemonicParsing="false" onAction="#onMoveMenu"
                                                                  text="%label_yesterday_review"/>
                                                        <MenuItem id="2" mnemonicParsing="false" onAction="#onMoveMenu"
                                                                  text="%label_today_plan"/>
                                                        <MenuItem id="4" mnemonicParsing="false" onAction="#onMoveMenu"
                                                                  text="%label_today_summary"/>
                                                    </items>
                                                </Menu>
                                                <SeparatorMenuItem/>

                                                <MenuItem mnemonicParsing="false" onAction="#onDeleteMenu"
                                                          text="%menu_delete"/>
                                            </items>
                                        </ContextMenu>
                                    </contextMenu>
                                </ListView>
                            </content>
                        </TitledPane>
                        <TitledPane id="4" fx:id="todaySummaryTitledPane" animated="false" text="%label_today_summary">
                            <content>
                                <ListView id="4" fx:id="summaryList" onMouseClicked="#onTaskClicked" prefHeight="200.0"
                                          prefWidth="200.0">
                                    <contextMenu>
                                        <ContextMenu id="4">
                                            <items>


                                                <Menu mnemonicParsing="false" text="%menu_move_to">
                                                    <items>
                                                        <MenuItem id="1" mnemonicParsing="false" onAction="#onMoveMenu"
                                                                  text="%label_yesterday_review"/>
                                                        <MenuItem id="2" mnemonicParsing="false" onAction="#onMoveMenu"
                                                                  text="%label_today_plan"/>
                                                        <MenuItem id="3" mnemonicParsing="false" onAction="#onMoveMenu"
                                                                  text="%label_tomato_potato"/>
                                                    </items>
                                                </Menu>
                                                <SeparatorMenuItem/>

                                                <MenuItem mnemonicParsing="false" onAction="#onDeleteMenu"
                                                          text="%menu_delete"/>
                                            </items>
                                        </ContextMenu>
                                    </contextMenu>
                                </ListView>
                            </content>
                        </TitledPane>
                    </panes>
                </Accordion>
                <TextField onAction="#onAddMottoTextField" promptText="%today_motto" GridPane.columnSpan="3"
                           GridPane.rowIndex="6"/>
                <TitledPane collapsible="false" text="%label_timer" GridPane.rowIndex="3">
                    <content>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="30.0">
                            <children>
                                <Label fx:id="timerStatsLabel" text="timer status">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="timerCounterLabel" text="Label" textFill="#2fa105">
                                    <font>
                                        <Font size="48.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="workContentLabel" text="Label" underline="true"/>
                                <HBox alignment="CENTER" prefWidth="200.0" style="-fx-spacing: 20;">
                                    <children>
                                        <Button fx:id="stopButton" mnemonicParsing="false" onAction="#onStopTimer"
                                                text="%label_stop"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane fx:id="titledPane" collapsible="false" prefHeight="273.0" prefWidth="273.0"
                            GridPane.rowIndex="1">
                    <content>
                        <BorderPane fx:id="datePickerPane" prefHeight="247.0" prefWidth="271.0"/>
                    </content>
                </TitledPane>
            </children>
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </GridPane>
    </center>
    <top>
        <ToolBar maxWidth="1.7976931348623157E308" prefHeight="39.0" prefWidth="614.0" BorderPane.alignment="CENTER">
            <items>
                <Button mnemonicParsing="false" onAction="#onSettings" text="%label.setting"/>
                <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="11.0"/>
                <ComboBox fx:id="typeComboBox" prefHeight="27.0" prefWidth="154.0"/>
                <TextField fx:id="newContentTextField" maxHeight="1.7976931348623157E308"
                           maxWidth="1.7976931348623157E308" onKeyPressed="#onNewContentKeyPressed" prefHeight="27.0"
                           prefWidth="590.0" promptText="%label_new_task"/>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButtonAction" text="添加"/>
            </items>
        </ToolBar>
    </top>
    <padding>
        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
    </padding>
</BorderPane>
