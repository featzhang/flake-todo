<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="788.0" prefWidth="974.0" BorderPane.alignment="CENTER"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.zuofengzhang.flake.client.controller.DashboardController">
    <center>
        <TabPane>
            <Tab fx:id="todayTab" closable="false" text="%today">
                <BorderPane>
                    <left>
                        <ScrollPane BorderPane.alignment="CENTER">
                            <VBox>
                                <children>
                                    <TitledPane fx:id="currentDayTitledPane" prefWidth="258.0" text="today_dayId">
                                        <content>
                                            <BorderPane fx:id="datePickerPane" prefHeight="247.0" prefWidth="271.0"/>
                                        </content>
                                    </TitledPane>
                                    <TitledPane text="%focus">
                                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0"
                                              spacing="30.0">
                                            <Label fx:id="timeStatLabel" text="timer status">
                                                <font>
                                                    <Font size="18.0"/>
                                                </font>
                                            </Label>
                                            <Label fx:id="timeClockLabel" text="time_clock" textFill="#2fa105">
                                                <font>
                                                    <Font size="48.0"/>
                                                </font>
                                            </Label>
                                            <Label fx:id="workContentLabel" text="item_content" underline="true"/>
                                            <HBox alignment="CENTER" prefHeight="26.0" prefWidth="175.0">
                                                <Button fx:id="interruptButton" mnemonicParsing="false"
                                                        onAction="#onInterrupt" text="%interrupt"/>
                                            </HBox>
                                        </VBox>
                                    </TitledPane>
                                    <TitledPane fx:id="focusTitledPane" collapsible="false" text="%focus">
                                    </TitledPane>
                                </children>
                            </VBox>
                        </ScrollPane>
                    </left>
                    <center>
                        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <top>
                                <ToolBar maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="614.0"
                                         BorderPane.alignment="CENTER">
                                    <TextField fx:id="newContentTextField" onKeyPressed="#onNewContentKeyPressed"
                                               promptText="%new_task" HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font size="16.0"/>
                                        </font>
                                    </TextField>
                                    <Button mnemonicParsing="false" onAction="#onAddButtonAction"
                                            style="-fx-graphic: url('/images/add.png')" text="添加"/>
                                    <Button mnemonicParsing="false" onAction="#onAddMoreButtonAction"
                                            style="-fx-graphic: url('/images/more.png')" text="更多"/>
                                </ToolBar>
                            </top>
                            <center>
                                <TabPane side="BOTTOM" BorderPane.alignment="CENTER">
                                    <Tab closable="false" text="%time_view">
                                        <Accordion fx:id="according" depthTest="ENABLE"
                                                   maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                                   style="-fx-border-color: darkgray;">
                                            <panes>
                                                <TitledPane id="0" fx:id="undoneTitledPane" animated="false"
                                                            text="%undone">
                                                    <ListView id="0" fx:id="undoneList" onMouseClicked="#onTaskClicked"
                                                              prefHeight="200.0" prefWidth="200.0"/>
                                                </TitledPane>
                                                <TitledPane id="5" fx:id="nearWeekTitledPane" animated="false"
                                                            text="%near_week_review">
                                                    <ListView id="5" fx:id="nearWeekList"
                                                              onMouseClicked="#onTaskClicked" prefHeight="200.0"
                                                              prefWidth="200.0"/>
                                                </TitledPane>
                                                <TitledPane id="1" fx:id="yesterdayTitledPane" animated="false"
                                                            text="%yesterday_review">
                                                    <ListView id="1" fx:id="yesterdayList"
                                                              onMouseClicked="#onTaskClicked" prefHeight="200.0"
                                                              prefWidth="200.0"/>
                                                </TitledPane>
                                                <TitledPane id="2" fx:id="todayPlanTitledPane" animated="false"
                                                            text="%today_plan">
                                                    <ListView id="2" fx:id="todayPlanList"
                                                              onMouseClicked="#onTaskClicked" prefHeight="200.0"
                                                              prefWidth="200.0"/>
                                                </TitledPane>
                                                <TitledPane id="3" fx:id="tomatoPotatoTitledPane" animated="false"
                                                            text="%tomato_potato">
                                                    <ListView id="3" fx:id="todayTomatoList"
                                                              onMouseClicked="#onTaskClicked" prefHeight="200.0"
                                                              prefWidth="200.0"/>
                                                </TitledPane>
                                                <TitledPane id="4" fx:id="todaySummaryTitledPane" animated="false"
                                                            text="%today_summary">
                                                    <ListView id="4" fx:id="summaryList" onMouseClicked="#onTaskClicked"
                                                              prefHeight="200.0" prefWidth="200.0"/>
                                                </TitledPane>
                                            </panes>
                                        </Accordion>
                                    </Tab>
                                    <Tab closable="false" text="%today"/>
                                    <Tab closable="false" text="%all"/>
                                    <Tab closable="false" text="%undone"/>
                                    <Tab closable="false" text="%yesterday_review"/>
                                    <Tab closable="false" text="%near_week_review"/>
                                    <Tab closable="false" text="%four_quadrant_view"/>
                                    <Tab closable="false" text="%timeline_view"/>
                                    <Tab closable="false" text="%search_view"/>
                                </TabPane>
                            </center>
                        </BorderPane>
                    </center>
                </BorderPane>
            </Tab>

            <Tab fx:id="tasksTab" closable="false" text="%tasks">

                <BorderPane>
                    <top>
                        <ToolBar>
                            <Button text="%hide"/>
                            <TextField fx:id="searchTextField" onKeyPressed="#onSearchTextKeyPressed"
                                       promptText="%new_task" style="-fx-font-size: 16;" HBox.hgrow="ALWAYS"/>
                            <Button onAction="#onSearchButtonAction" style="-fx-graphic: url('/images/search.png')"
                                    text="%search"/>
                        </ToolBar>
                    </top>
                    <center>
                        <SplitPane dividerPositions="0.2" prefHeight="160.0" prefWidth="200.0"
                                   BorderPane.alignment="CENTER">
                            <items>
                                <VBox prefHeight="200.0" prefWidth="100.0">
                                    <children>
                                        <TitledPane prefWidth="200.0" text="%timer">
                                            <content>
                                                <VBox prefWidth="100.0">
                                                    <children>
                                                        <RadioButton fx:id="taskTabShowAll" mnemonicParsing="false"
                                                                     selected="true" text="%all"
                                                                     toggleGroup="$timeGroup">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="timeGroup"/>
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton fx:id="taskTabShowToday" mnemonicParsing="false"
                                                                     text="%today" toggleGroup="$timeGroup"/>
                                                        <RadioButton fx:id="taskTabShowThisWeek" mnemonicParsing="false"
                                                                     text="%this_week" toggleGroup="$timeGroup"/>
                                                        <RadioButton fx:id="taskTabShowNearWeek" mnemonicParsing="false"
                                                                     text="%near_week" toggleGroup="$timeGroup"/>
                                                        <RadioButton fx:id="taskTabShowThisMonth"
                                                                     mnemonicParsing="false" text="%this_month"
                                                                     toggleGroup="$timeGroup"/>
                                                        <RadioButton fx:id="taskTabShowNearMonth"
                                                                     mnemonicParsing="false" text="%near_month"
                                                                     toggleGroup="$timeGroup"/>
                                                        <RadioButton fx:id="taskTabShowThisYear" mnemonicParsing="false"
                                                                     text="%this_year" toggleGroup="$timeGroup"/>
                                                    </children>
                                                </VBox>
                                            </content>
                                        </TitledPane>
                                        <TitledPane text="%menu_importance_urgency_axis">
                                            <content>
                                                <VBox prefWidth="100.0">
                                                    <children>
                                                        <RadioButton fx:id="taskTabIuaAll" selected="true" text="%all"
                                                                     toggleGroup="$iuaGroup">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="iuaGroup"/>
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton fx:id="taskTabIua1" text="%importance_urgency"
                                                                     toggleGroup="$iuaGroup"/>
                                                        <RadioButton fx:id="taskTabIua2"
                                                                     text="%importance_but_not_urgency"
                                                                     toggleGroup="$iuaGroup"/>
                                                        <RadioButton fx:id="taskTabIua3"
                                                                     text="%not_importance_but_urgency"
                                                                     toggleGroup="$iuaGroup"/>
                                                        <RadioButton fx:id="taskTabIua4"
                                                                     text="%not_importance_not_urgency"
                                                                     toggleGroup="$iuaGroup"/>
                                                    </children>
                                                </VBox>
                                            </content>
                                        </TitledPane>
                                    </children>
                                </VBox>
                                <ListView id="0" fx:id="allTaskListView" onMouseClicked="#onTaskClicked"
                                          prefHeight="200.0" prefWidth="200.0"/>
                            </items>
                        </SplitPane>
                    </center>
                </BorderPane>
            </Tab>
            <Tab closable="false" text="%schedule">
            </Tab>
            <Tab closable="false" text="%dashboard">

            </Tab>
        </TabPane>
    </center>
    <padding>
        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
    </padding>
    <bottom>
        <ToolBar BorderPane.alignment="CENTER">
            <HBox>
                <Button mnemonicParsing="false" onAction="#onSettings" style="-fx-graphic: url('/images/settings.png')"
                        text="%setting"/>
            </HBox>
            <BorderPane HBox.hgrow="ALWAYS">
                <center>
                    <Label fx:id="messageStatLabel">
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Label>
                </center>
            </BorderPane>
            <HBox fx:id="statusHBox" style="-fx-font-size: 16;-fx-border-color: white;-fx-border-width: 1;">
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/todos.png')"/>
                <Label fx:id="tomatoCntLbl" text="todos"/>
                <Separator orientation="VERTICAL"/>
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/tasks.png');"/>
                <Label fx:id="totalTaskCntLbl" text="tasks"/>
                <Separator orientation="VERTICAL"/>
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/today_task.png')"/>
                <Label fx:id="todayTaskCntLbl" text="todayTaskCnt"/>
                <Separator orientation="VERTICAL"/>
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/distribute.png');"/>
                <Label fx:id="taskPriorityDistributeLbl" text="taskPriorityDistributeLbl"/>
                <Separator orientation="VERTICAL"/>
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/urgent.png')"/>
                <Label fx:id="urgentTaskCntLbl"/>
                <Separator orientation="VERTICAL"/>
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/completeness.png')"/>
                <Label fx:id="completenessLbl" text="completenessLbl"/>
                <Separator orientation="VERTICAL"/>
                <Label onMouseEntered="#onAllTodosIconEntered" style="-fx-graphic: url('/images/working.jpg')"/>
                <Label fx:id="maxWorkTimeLbl" text="maxWorkTimeLbl"/>
            </HBox>
        </ToolBar>
    </bottom>
</BorderPane>
