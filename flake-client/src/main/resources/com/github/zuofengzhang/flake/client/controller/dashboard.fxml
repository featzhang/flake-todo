<BorderPane fx:id="rootPane" prefHeight="788.0" prefWidth="932.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.zuofengzhang.flake.client.controller.DashboardController">
    <center>
        <GridPane hgap="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="703.0" prefWidth="985.0" vgap="5.0">

            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="260.0" minWidth="100.0" prefWidth="260.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="597.0" />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints maxHeight="301.0" minHeight="0.0" prefHeight="273.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="231.0" minHeight="9.0" prefHeight="54.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="454.0" minHeight="0.0" prefHeight="252.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="389.0" minHeight="10.0" prefHeight="65.0" valignment="CENTER" vgrow="ALWAYS" />
                <RowConstraints maxHeight="389.0" minHeight="10.0" prefHeight="42.0" valignment="CENTER" vgrow="ALWAYS" />
                <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="23.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Accordion fx:id="according" depthTest="ENABLE" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-border-color: darkgray;" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.rowSpan="5" GridPane.vgrow="ALWAYS">
                    <panes>
                        <TitledPane id="0" fx:id="undoneTitledPane" animated="false" text="%label_undone">
                            <content>
                                <ListView id="0" fx:id="undoneList" onMouseClicked="#onTaskClicked" prefHeight="200.0" prefWidth="200.0" />
                            </content>
                        </TitledPane>
                        <TitledPane id="1" fx:id="yesterdayTitledPane" animated="false" text="%label_yesterday_review">
                            <content>
                                <ListView id="1" fx:id="yesterdayList" onMouseClicked="#onTaskClicked" prefHeight="200.0" prefWidth="200.0" />
                            </content>
                        </TitledPane>
                        <TitledPane id="2" fx:id="todayPlanTitledPane" animated="false" text="%label_today_plan">
                            <content>
                                <ListView id="2" fx:id="todayPlanList" onMouseClicked="#onTaskClicked" prefHeight="200.0" prefWidth="200.0" />
                            </content>
                        </TitledPane>
                        <TitledPane id="3" fx:id="tomatoPotatoTitledPane" animated="false" text="%label_tomato_potato">
                            <content>
                                <ListView id="3" fx:id="todayTomatoList" onMouseClicked="#onTaskClicked" prefHeight="200.0" prefWidth="200.0" />
                            </content>
                        </TitledPane>
                        <TitledPane id="4" fx:id="todaySummaryTitledPane" animated="false" text="%label_today_summary">
                            <content>
                                <ListView id="4" fx:id="summaryList" onMouseClicked="#onTaskClicked" prefHeight="200.0" prefWidth="200.0" />
                            </content>
                        </TitledPane>
                    </panes>
                </Accordion>
                <TitledPane collapsible="false" text="%label_timer" GridPane.rowIndex="3">
                    <content>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="30.0">
                            <children>
                                <Label fx:id="timerStatsLabel" text="timer status">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Label fx:id="timerCounterLabel" text="Label" textFill="#2fa105">
                                    <font>
                                        <Font size="48.0" />
                                    </font>
                                </Label>
                                <Label fx:id="workContentLabel" text="Label" underline="true" />
                                <HBox alignment="CENTER" prefWidth="200.0" style="-fx-spacing: 20;">
                                    <children>
                                        <Button fx:id="stopButton" mnemonicParsing="false" onAction="#onStopTimer" text="%label_stop" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane fx:id="currentDayTitledPane" collapsible="false" prefHeight="273.0" prefWidth="273.0" GridPane.rowIndex="1">
                    <content>
                        <BorderPane fx:id="datePickerPane" prefHeight="247.0" prefWidth="271.0" />
                    </content>
                </TitledPane>
                <ToolBar GridPane.columnSpan="3" GridPane.rowIndex="6">
                    <HBox>
                        <Button mnemonicParsing="false" onAction="#onSettings" style="-fx-graphic: url('/images/settings.png')" text="%label.setting">

                        </Button>
                        <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="11.0" />
                    </HBox>
                    <HBox fx:id="statusHBox" style="-fx-background-color: red;-fx-font-size: 16;-fx-border-color: white;-fx-border-width: 1;">
                        <Label style="-fx-graphic: url('/images/todos.png')" />
                        <Label fx:id="tomatoCntLbl" text="todos" />
                        <Separator orientation="VERTICAL" />
                        <Label style="-fx-graphic: url('/images/tasks.png');" />
                        <Label fx:id="totalTaskCntLbl" text="tasks" />
                        <Separator orientation="VERTICAL" />
                        <Label style="-fx-graphic: url('/images/today_task.png')" />
                        <Label fx:id="todayTaskCntLbl" text="todayTaskCnt" />
                        <Separator orientation="VERTICAL" />
                        <Label style="-fx-graphic: url('/images/distribute.png');" />
                        <Label fx:id="taskPriorityDistributeLbl" text="taskPriorityDistributeLbl" />
                        <Separator orientation="VERTICAL" />
                        <Label style="-fx-graphic: url('/images/urgent.png')" />
                        <Label fx:id="urgentTaskCntLbl" text="" />
                        <Separator orientation="VERTICAL" />
                        <Label style="-fx-graphic: url('/images/completeness.png')" />
                        <Label fx:id="completenessLbl" text="completenessLbl" />
                        <Separator orientation="VERTICAL" />
                        <Label style="-fx-graphic: url('/images/working.jpg')" />
                        <Label fx:id="maxWorkTimeLbl" text="maxWorkTimeLbl" />
                    </HBox>
                </ToolBar>
            </children>

        </GridPane>
    </center>
    <top>
        <ToolBar maxWidth="1.7976931348623157E308" prefHeight="39.0" prefWidth="614.0" BorderPane.alignment="CENTER">
            <HBox prefWidth="950.0">
                <children>
                    <ComboBox fx:id="typeComboBox" HBox.hgrow="NEVER" />
                    <TextField fx:id="newContentTextField" onKeyPressed="#onNewContentKeyPressed" promptText="%label_new_task" HBox.hgrow="ALWAYS">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </TextField>
                    <Button mnemonicParsing="false" onAction="#onAddButtonAction" style="-fx-graphic: url('/images/add.png')" text="添加" />
                    <Button mnemonicParsing="false" onAction="#onAddMoreButtonAction" style="-fx-graphic: url('/images/more.png')" text="更多" />
                </children>
            </HBox>
        </ToolBar>
    </top>
    <padding>
        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
    </padding>
</BorderPane>
